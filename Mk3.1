<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>100+ Computer Ports & Connectors Catalog</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background-color: #f5f5f5;
      color: #333;
    }
    header {
      background-color: #1e1e1e;
      color: #fff;
      padding: 12px 20px;
      position: sticky;
      top: 0;
      z-index: 100;
    }
    header h1 {
      margin: 0;
      font-size: 24px;
      display: inline-block;
    }
    nav {
      display: inline-block;
      margin-left: 30px;
    }
    nav a {
      color: #fff;
      text-decoration: none;
      margin: 0 12px;
      font-weight: bold;
    }
    nav a:hover {
      text-decoration: underline;
    }
    .search-bar {
      margin: 12px 20px;
      display: flex;
      justify-content: flex-start;
    }
    .search-bar input {
      padding: 8px 12px;
      width: 300px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    section {
      padding: 16px 20px;
    }
    section h2 {
      font-size: 20px;
      margin-top: 24px;
      margin-bottom: 12px;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 16px;
    }
    .card {
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 6px rgba(0,0,0,0.15);
      display: flex;
      flex-direction: column;
    }
    .card img {
      width: 100%;
      height: 150px;
      object-fit: contain;
      background-color: #f0f0f0;
    }
    .card .meta {
      padding: 10px 12px;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }
    .card .meta h3 {
      margin: 0 0 6px 0;
      font-size: 16px;
      color: #111;
    }
    .card .meta p {
      font-size: 14px;
      margin: 0;
      flex-grow: 1;
    }
    .card .meta a.source {
      font-size: 12px;
      color: #007acc;
      text-decoration: none;
    }
    .card .meta a.source:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

<header>
  <h1>Computer Ports & Connectors Catalog</h1>
  <nav>
    <a href="#part1">Modern / Consumer</a>
    <a href="#part2">Networking / Storage</a>
    <a href="#part3">Legacy / Industrial</a>
  </nav>
</header>

<div class="search-bar">
  <input type="text" id="searchInput" placeholder="Search ports/connectors...">
</div>

<!-- PART 1 -->
<section id="part1">
  <h2>Part 1 — Modern / Consumer Ports</h2>
  <div class="grid" id="grid">
    <!-- Example card, repeat for all Part 1 entries -->
    <div class="card">
      <div class="thumb"><img src="https://upload.wikimedia.org/wikipedia/commons/6/6d/USB_Type-A_Plug.jpg" alt="USB-A"></div>
      <div class="meta">
        <h3>USB-A</h3>
        <p>Standard rectangular USB connector used on many devices. <a class="source" href="https://commons.wikimedia.org/wiki/File:USB_Type-A_Plug.jpg" target="_blank">Image source</a></p>
      </div>
    </div>
    <!-- Add all Part 1 cards here -->
  </div>
</section>

<!-- PART 2 -->
<section id="part2">
  <h2>Part 2 — Networking / Fiber / Telecom / Enterprise Storage</h2>
  <div class="grid" id="grid2">
    <!-- Add all Part 2 cards here from previous code -->
  </div>
</section>

<!-- PART 3 -->
<section id="part3">
  <h2>Part 3 — Legacy / Industrial / Specialized</h2>
  <div class="grid" id="grid3">
    <!-- Add all Part 3 cards here from previous code -->
  </div>
</section>

<script>
  const searchInput = document.getElementById('searchInput');
  searchInput.addEventListener('input', function() {
    const filter = searchInput.value.toLowerCase();
    const grids = [document.getElementById('grid'), document.getElementById('grid2'), document.getElementById('grid3')];
    grids.forEach(grid => {
      Array.from(grid.getElementsByClassName('card')).forEach(card => {
        const title = card.querySelector('h3').innerText.toLowerCase();
        card.style.display = title.includes(filter) ? '' : 'none';
      });
    });
  });
</script>

</body>
</html>
